<article class="col-md-6 col-lg-4">

   <div class="row">
   
      <div class="col-md-6 col-lg-4">
    
         <img src="{{this.image_url}}" alt="photo"/>

         <hr>

         <div class="row">

              <div class="col-md-6 col-lg-4">
            
               <h2 class="card-title">{{this.name}}</h2>
            
              <p class="card-text">{{this.description}}</p>
            
              <p class="card-text">{{this.tagline}}</p>

         </div>
   
      </div>
    
    </div>

</article>